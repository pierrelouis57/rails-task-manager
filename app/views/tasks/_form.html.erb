<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title  %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div>
   <%= f.label(:completed, "Completed !") %>
    <%= f.check_box(:completed)%>
  </div>

  <%= f.submit %>
<% end %>
